generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id String @id @default(uuid())
  username String @unique
  password String
  email  String? @unique
  createdAt DateTime @default(now())

  workflows Workflow[]
  creds Credential[]
}
model Credential {
  id String @id @default(uuid())
  provider String
  apiKey String @unique

  userId String
  user User @relation(fields: [userId], references: [id])
}

model Workflow {
  id String @id @default(uuid())
  title String
  enabled Boolean
  nodes Json
  connetions Json
  createdAt DateTime @default(now())

  userId String
  user User @relation(fields: [userId], references: [id])
}
